<tools:RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/hometrip"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Travel Buddy"

        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="245dp"

        android:fontFamily="sans-serif-medium"
        android:textStyle="bold|italic"
        android:textSize="38dp"

        android:layout_marginBottom="130dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="80dp"

        />


    <Button
        android:id="@+id/addTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addNewTrip"
        android:text="Add Trip"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="193dp"

        android:layout_marginBottom="150dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"
        />

</tools:RelativeLayout>