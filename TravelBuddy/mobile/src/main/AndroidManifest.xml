<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.mobile.msc.ntu.travelbuddy">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddTripActivity" />
        <activity
            android:name=".activities.ViewTripsActivity"
            android:label="@string/title_activity_view_trips"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.view_trips_tabs" />
        <activity
            android:name=".activities.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ViewTripsTabs"
            android:label="@string/title_activity_view_trips_tabs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ComingTripsActivity" />
        <activity android:name=".activities.PastTripsActivity"></activity>
    </application>

</manifest>